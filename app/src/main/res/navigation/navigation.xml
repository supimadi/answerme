<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/feedsFragment">

    <fragment
        android:id="@+id/feedsFragment"
        android:name="org.d3if3038.answerme.ui.FeedsFragment"
        android:label="Umpan"
        tools:layout="@layout/fragment_feeds">
        <action
            android:id="@+id/action_feedsFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="org.d3if3038.answerme.ui.setting.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting"/>

    <fragment
        android:id="@+id/myPostFragment"
        android:name="org.d3if3038.answerme.ui.MyPostFragment"
        android:label="MyPostFragment"
        tools:layout="@layout/fragment_my_post"/>

    <fragment
        android:id="@+id/createPostFragment"
        android:name="org.d3if3038.answerme.ui.createpost.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post"/>

</navigation>