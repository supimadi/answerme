<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/feedPages">

    <fragment
        android:id="@+id/feedPages"
        android:name="org.d3if3038.answerme.ui.feeds.FeedsFragment"
        android:label="@string/feeds"
        tools:layout="@layout/fragment_feeds">
        <action
            android:id="@+id/action_feedPages_to_commentActivity"
            app:destination="@id/commentActivity"
            app:popUpTo="@id/feedPages" />
        <action
            android:id="@+id/action_feedPages_to_createQuestionActivity"
            app:destination="@id/createQuestionActivity" />
    </fragment>

    <fragment
        android:id="@+id/settingPage"
        android:name="org.d3if3038.answerme.ui.setting.SettingFragment"
        android:label="@string/setting"
        tools:layout="@layout/fragment_setting"/>

    <fragment
        android:id="@+id/myQuestionPage"
        android:name="org.d3if3038.answerme.ui.myquestion.MyQuestionFragment"
        android:label="@string/my_post"
        tools:layout="@layout/fragment_my_question">
        <action
            android:id="@+id/action_myQuestionPage_to_commentActivity"
            app:destination="@id/commentActivity"
            app:popUpTo="@id/myQuestionPage" />
    </fragment>


    <activity
        android:id="@+id/commentActivity"
        android:name="org.d3if3038.answerme.ui.comment.CommentActivity"
        android:label="CommentActivity"
        tools:layout="@layout/activity_comment">
        <argument
            android:name="documentId"
            app:argType="string" />
    </activity>

    <activity
        android:id="@+id/createQuestionActivity"
        android:name="org.d3if3038.answerme.ui.createquestion.CreateQuestionActivity"
        android:label="CreateQuestionActivity"
        tools:layout="@layout/activity_create_question"/>

</navigation>